<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <com.google.android.material.card.MaterialCardView
        android:layout_marginLeft="@dimen/card_spacing"
        android:layout_marginTop="@dimen/card_spacing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/card_spacing"
        android:minHeight="150dp"
        app:strokeColor="@color/materialGrey"
        app:strokeWidth="@dimen/appbar_padding_top">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/rss_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="18dp"
                android:contentDescription="@string/image_from_article"
                android:scaleType="fitCenter"
                android:src="@drawable/tab_rss_activated" />

            <TextView
                android:id="@+id/rss_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/rss_image"
                android:paddingBottom="25dp"
                android:text="@string/app_name"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/rss_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rss_title"
                android:layout_toEndOf="@+id/rss_image"
                android:text="@string/app_name" />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>
