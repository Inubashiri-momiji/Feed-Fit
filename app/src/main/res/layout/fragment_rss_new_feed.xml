<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_spacing_medium"
    android:layout_marginTop="@dimen/card_spacing_medium"
    android:layout_marginRight="@dimen/card_spacing_medium"
    app:cardCornerRadius="@dimen/card_round"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:strokeColor="@color/materialGrey"
    app:strokeWidth="@dimen/card_stroke">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_marginStart="@dimen/card_spacing_min">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_favorite"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@string/description_follow"
            android:text="@string/follow"
            android:textSize="12sp"
            app:strokeColor="?android:attr/colorControlActivated"
            app:strokeWidth="@dimen/card_spacing_min" />

        <TextView
            android:id="@+id/feed_title_news"
            android:layout_width="320dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/btn_add_favorite"
            android:fontFamily="sans-serif"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/feed_summary_news"
            android:layout_width="320dp"
            android:layout_height="80dp"
            android:layout_below="@+id/feed_title_news"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@id/btn_add_favorite"
            android:fontFamily="sans-serif"
            android:text="@string/app_name"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/feed_domain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_add_favorite"
            android:layout_marginTop="12dp"
            android:textSize="10sp"
            android:text="@string/app_name" />

    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>
